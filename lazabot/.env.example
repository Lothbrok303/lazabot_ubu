# Lazabot Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Get these from your Lazada Developer account
LAZADA_API_KEY=your_api_key_here
LAZADA_API_SECRET=your_api_secret_here
LAZADA_API_ENDPOINT=https://api.lazada.com.my/rest

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
LAZABOT_PORT=8081
LAZABOT_LOG_LEVEL=info
LAZABOT_DATA_DIR=/opt/lazabot/data
LAZABOT_LOG_DIR=/opt/lazabot/logs

# =============================================================================
# SECURITY SETTINGS (CHANGE THESE!)
# =============================================================================
# Generate secure random strings for production
LAZABOT_SECRET_KEY=your_very_secure_secret_key_here_change_this
LAZABOT_JWT_SECRET=your_very_secure_jwt_secret_here_change_this

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database (default)
DATABASE_URL=sqlite:////opt/lazabot/data/lazabot.db

# PostgreSQL (alternative)
# DATABASE_URL=postgresql://username:password@localhost:5432/lazabot

# MySQL (alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/lazabot

# =============================================================================
# PROXY SETTINGS (OPTIONAL)
# =============================================================================
# Uncomment and configure if you need to use a proxy
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# =============================================================================
# MONITORING AND ALERTS (OPTIONAL)
# =============================================================================
# Webhook URL for notifications
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email settings for alerts
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'development' for debug mode
NODE_ENV=production

# Enable debug logging
# DEBUG=lazabot:*

# =============================================================================
# RATE LIMITING
# =============================================================================
# API rate limits (requests per minute)
API_RATE_LIMIT=60
PLAYWRIGHT_RATE_LIMIT=30

# =============================================================================
# CACHE SETTINGS
# =============================================================================
# Redis cache (optional)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# Maximum file upload size (in bytes)
MAX_UPLOAD_SIZE=10485760

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
# Enable automatic backups
ENABLE_BACKUPS=true

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# SSL/TLS SETTINGS
# =============================================================================
# SSL certificate paths (for HTTPS)
# SSL_CERT_PATH=/etc/ssl/certs/lazabot.crt
# SSL_KEY_PATH=/etc/ssl/private/lazabot.key

# Force HTTPS redirect
# FORCE_HTTPS=true
