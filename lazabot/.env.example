# Lazabot Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED ENVIRONMENT VARIABLES
# =============================================================================

# Master encryption key (32 bytes, hex-encoded)
# Generate with: openssl rand -hex 32
LAZABOT_MASTER_KEY=your_64_character_hex_encoded_master_key_here

# 2Captcha API key for solving captchas
LAZABOT_CAPTCHA_API_KEY=your_2captcha_api_key_here

# At least one Lazada account is required
# Option 1: Single account
LAZABOT_USERNAME=your_lazada_email@example.com
LAZABOT_PASSWORD=your_lazada_password
LAZABOT_EMAIL=your_lazada_email@example.com

# Option 2: Multiple accounts (numbered)
# LAZABOT_ACCOUNT_1_USERNAME=account1@example.com
# LAZABOT_ACCOUNT_1_PASSWORD=password1
# LAZABOT_ACCOUNT_1_EMAIL=account1@example.com
# LAZABOT_ACCOUNT_2_USERNAME=account2@example.com
# LAZABOT_ACCOUNT_2_PASSWORD=password2
# LAZABOT_ACCOUNT_2_EMAIL=account2@example.com

# =============================================================================
# OPTIONAL ENVIRONMENT VARIABLES
# =============================================================================

# Application settings
LAZABOT_LOG_LEVEL=info
LAZABOT_DATA_DIR=./data
LAZABOT_LOG_DIR=./logs
LAZABOT_VAULT_PATH=./data/credentials.vault
LAZABOT_DATABASE_URL=sqlite://./data/lazabot.db

# Session secret (for additional security)
LAZABOT_SESSION_SECRET=your_session_secret_here

# Proxy settings (optional)
# Single proxy
# LAZABOT_PROXY_HOST=proxy.example.com
# LAZABOT_PROXY_PORT=8080
# LAZABOT_PROXY_USERNAME=proxy_user
# LAZABOT_PROXY_PASSWORD=proxy_pass
# LAZABOT_PROXY_TYPE=http

# Multiple proxies (numbered)
# LAZABOT_PROXY_1_HOST=proxy1.example.com
# LAZABOT_PROXY_1_PORT=8080
# LAZABOT_PROXY_1_USERNAME=proxy1_user
# LAZABOT_PROXY_1_PASSWORD=proxy1_pass
# LAZABOT_PROXY_1_TYPE=http
# LAZABOT_PROXY_2_HOST=proxy2.example.com
# LAZABOT_PROXY_2_PORT=3128
# LAZABOT_PROXY_2_USERNAME=proxy2_user
# LAZABOT_PROXY_2_PASSWORD=proxy2_pass
# LAZABOT_PROXY_2_TYPE=socks5

# Captcha settings
LAZABOT_CAPTCHA_ENDPOINT=https://2captcha.com/api

# API settings
LAZABOT_API_TIMEOUT=30
LAZABOT_API_RETRY_ATTEMPTS=3
LAZABOT_API_RETRY_DELAY=1000

# Rate limiting
LAZABOT_RATE_LIMIT_REQUESTS_PER_MINUTE=60
LAZABOT_RATE_LIMIT_BURST=10

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit this file to version control
# 2. Use strong, unique passwords and keys
# 3. Rotate keys regularly
# 4. Use environment-specific values for different deployments
# 5. Consider using a secrets management system for production
